{
  "name": "deep-code-reviewer",
  "displayName": "deep-code-reviewer",
  "description": "AI-powered code reviewer for VS Code. Detects errors, warnings, and suggestions with OpenAI GPT models, adds inline squiggles, Problems panel integration, and one-click Quick Fixes.",
  "repository": {
  "type": "git",
  "url": "https://github.com/shaheerimran/deep-code-reviewer.git",
  "keywords": [
  "AI",
  "code review",
  "linting",
  "bug detection",
  "static analysis",
  "OpenAI",
  "VS Code",
  "quick fix",
  "autofix"]
  },
  "license": "MIT",
  "publisher": "ShaheerImran",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.102.0"
  },
"categories": [
  "Programming Languages",
  "Linters",
  "Machine Learning"
  ],
  "activationEvents": [
    "onView:deepCodeReviewer.findings",
    "onCommand:deep-code-reviewer.reviewCode",
    "onCommand:deep-code-reviewer.setOpenAIKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {

    "commands": [ 
    { "command": "deep-code-reviewer.setOpenAIKey", 
      "title": "Deep Code Reviewer: Set OpenAI API Key" }, 

    { "command": "deep-code-reviewer.clearOpenAIKey", 
      "title": "Deep Code Reviewer: Clear OpenAI API Key" },

    { "command": "deep-code-reviewer.reviewCode", 
      "title": "Deep Code Reviewer: Review Current File" },
    
    { "command": "deep-code-reviewer.showOutput",
      "title": "Deep Code Reviewer: Show Output"},
    
    { "command": "deep-code-reviewer.applyFix",
      "title": "Apply Fix"},

    { "command": "deep-code-reviewer.openIssue",
      "title": "Deep Code Reviewer: Open Issue",
      "icon": "$(go-to-file)"}
    ],

    "views": {
      "explorer": [
        {
          "id": "deepCodeReviewer.findings",
          "name": "Deep Code Reviewer"
        }
      ]
    },

    "menus": {
      "view/item/context": [
        {
          "command": "deep-code-reviewer.openIssue",
          "when": "view == deepCodeReviewer.findings && viewItem == deepCodeReviewer.issue",
          "group": "navigation"
        },
        {
          "command": "deep-code-reviewer.applyFix",
          "when": "view == deepCodeReviewer.findings && viewItem == deepCodeReviewer.issue && deepCodeReviewer.hasFix",
          "group": "inline"
        }
      ]
    },

    "configuration": {
      "title": "Deep Code Reviewer",
      "properties": {
        "deepCode.openaiModel": {
          "type": "string",
          "default": "gpt-5-mini",
          "enum": ["gpt-5-mini", "gpt-4o-mini"],
          "description": "Select which OpenAI model to use for code reviews."
        },
        "deepCode.freeTierApiUrl": {
          "type": "string",
          "default": "",
          "description": "Backend API URL for free tier reviews. Leave empty to use default. Only change if hosting your own backend."
        }
      } 
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
    
  },
  "dependencies": {
    "openai": "^5.12.2"
  }
}
