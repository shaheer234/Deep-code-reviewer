{
  "name": "deep-code-reviewer",
  "displayName": "deep-code-reviewer",
  "description": "AI-powered code reviewer for VS Code. Detects errors, warnings, and suggestions with OpenAI GPT models, adds inline squiggles, Problems panel integration, and one-click Quick Fixes.",
  "repository": {
  "type": "git",
  "url": "https://github.com/shaheerimran/deep-code-reviewer.git",
  "keywords": [
  "AI",
  "code review",
  "linting",
  "bug detection",
  "static analysis",
  "OpenAI",
  "VS Code",
  "quick fix",
  "autofix"]
  },
  "license": "MIT",
  "publisher": "ShaheerImran",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.102.0"
  },
"categories": [
  "Programming Languages",
  "Linters",
  "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {

    "commands": [ 

    { "command": "deep-code-reviewer.reviewCode", 
      "title": "Deep Code Reviewer: Review Current File" },
    
    { "command": "deep-code-reviewer.showOutput",
      "title": "Deep Code Reviewer: Show Output"},
    
    { "command": "deep-code-reviewer.applyFix",
      "title": "Apply Fix"}
    ],

    "configuration": {
      "title": "Deep Code Reviewer"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
    
  },
  "dependencies": {
    "openai": "^5.12.2"
  }
}
